<html>
    <head>
         <title>
             <%= title %>
         </title>
         <meta name="viewport" content="width=device-width, initial-scale=1.0">
         <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <div id="main">
        <h1>
            <i class="fas fa-address-book"></i>
            My Contacts List
        </h1>
        <div id="list">
        <ul>
            <% for(let i of contact_list){
            %>
            <li>
                <p><span><%= i.name %></span> <span><%= i.phone %></span></p>
                <div class="del-btn">
                    <a href="/delete-contact/?id=<%= i._id %>">
                    <i class="fas fa-window-close"></i>
                    </a>
                </div>
            </li>
            <%
            }%>
        </ul>
        </div> 
        
        <form action="/create-contact" method="POST">
            
            <input type="text" name="name" placeholder="Enter Your Name" required>
            <input type="number" name="phone" placeholder="Enter Your Phone Number" required>
            <button type="submit">Add</button>

        </form>
    </div>
        <script src="https://kit.fontawesome.com/7ffdacbfe9.js" crossorigin="anonymous"></script>
         
        <script type="text/javaScript" src="/js/home.js"></script>
    </body>
</html>